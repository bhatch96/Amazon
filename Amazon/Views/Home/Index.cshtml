@{
    ViewData["Title"] = "Home Page";
}
@model IQueryable<Book>

<br />
<header>
    <div class="text-center bg-primary text-white" style="position: center">
        <h1> Amazon Books </h1>
    </div>
</header>
<br />


@foreach (var x in Model)
{
    <div class="float-left" style="width:400px; height:auto; border:groove; position: center; background-color:antiquewhite">
        <h5>Title: @x.Title</h5>
        <p>Book ID: @x.BookID</p>
        <p>Author: @x.Author</p>
        <p>Publisher: @x.Publisher</p>
        <p>ISBN: @x.ISBN</p>
        <p>Classification/Category: @x.ClassificationCategory</p>
        <p>Price: @x.Price</p>
    </div>
}
